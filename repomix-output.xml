          <MagneticWrapper strength={0.2}>
            <Link
              href="/about"
              className={`group relative py-2 font-mono text-sm font-bold tracking-wider transition-colors duration-200 block ${
                isAboutActive
                  ? 'text-primary'
                  : 'text-white/60 hover:text-primary'
